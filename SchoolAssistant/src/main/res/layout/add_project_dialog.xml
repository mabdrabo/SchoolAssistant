<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Course"
                android:id="@+id/textView"
                android:paddingTop="8dp" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/courseSpinner"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Title"
                android:id="@+id/textView2"
                android:paddingTop="8dp"
                android:layout_below="@+id/courseSpinner"
                android:layout_alignParentLeft="true" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/projectTitleEditText"
                android:layout_below="@+id/courseSpinner"
                android:layout_toRightOf="@+id/textView"
                android:hint="Project Title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Notes"
                android:id="@+id/textView3"
                android:paddingTop="8dp"
                android:layout_below="@+id/projectTitleEditText"
                android:layout_alignParentLeft="true" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/projectNotesEditText"
                android:layout_below="@+id/projectTitleEditText"
                android:layout_toRightOf="@+id/textView"
                android:hint="Project Notes" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Time"
                android:id="@+id/textView4"
                android:paddingTop="8dp"
                android:layout_below="@+id/projectNotesEditText"
                android:layout_alignParentLeft="true" />
            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/projectTimePicker"
                android:layout_below="@+id/textView4" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Date"
                android:id="@+id/textView5"
                android:paddingTop="8dp"
                android:layout_below="@+id/projectTimePicker"
                android:layout_alignParentLeft="true" />
            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datePicker"
                android:layout_below="@+id/textView5"
                android:calendarViewShown="false" />


            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Add"
                android:id="@+id/addProjectButton"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_below="@+id/datePicker"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>