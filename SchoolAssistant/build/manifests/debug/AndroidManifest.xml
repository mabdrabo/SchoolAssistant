<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="io.github.mabdrabo.schoolassistant">

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="16"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:configChanges="orientation|keyboardHidden" android:label="@string/app_name" android:name="io.github.mabdrabo.schoolassistant.activities.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/title_activity_courses" android:name="io.github.mabdrabo.schoolassistant.activities.CoursesActivity" android:parentActivityName=".activities.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".activities.MainActivity"/>
        </activity>
        <activity android:label="@string/title_activity_course" android:name="io.github.mabdrabo.schoolassistant.activities.CourseActivity" android:parentActivityName=".activities.CoursesActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".activities.CoursesActivity"/>
        </activity>
        <activity android:label="@string/title_activity_assignments" android:name="io.github.mabdrabo.schoolassistant.activities.AssignmentsActivity" android:parentActivityName=".activities.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".activities.MainActivity"/>
        </activity>
        <activity android:label="@string/title_activity_projects" android:name="io.github.mabdrabo.schoolassistant.activities.ProjectsActivity" android:parentActivityName=".activities.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".activities.MainActivity"/>
        </activity>
        <activity android:label="@string/title_activity_quizzes" android:name="io.github.mabdrabo.schoolassistant.activities.QuizzesActivity" android:parentActivityName=".activities.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".activities.MainActivity"/>
        </activity>
        <activity android:label="@string/title_activity_schedule" android:name="io.github.mabdrabo.schoolassistant.activities.ScheduleActivity" android:screenOrientation="landscape">
            android:parentActivityName=".activities.MainActivity" &gt;
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".activities.MainActivity"/>
        </activity>
        <activity android:label="@string/title_activity_settings" android:name="io.github.mabdrabo.schoolassistant.activities.SettingsActivity" android:parentActivityName=".activities.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".activities.MainActivity"/>
        </activity>
    </application>

</manifest>
