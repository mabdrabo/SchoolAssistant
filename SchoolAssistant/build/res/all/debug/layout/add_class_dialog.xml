<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Course"
        android:id="@+id/textView"
        android:paddingTop="8dp" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/courseSpinner"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Place"
        android:id="@+id/textView2"
        android:paddingTop="8dp"
        android:layout_below="@+id/courseSpinner"
        android:layout_alignParentLeft="true" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/placeEditText"
        android:layout_below="@+id/courseSpinner"
        android:layout_toRightOf="@+id/textView"
        android:hint="C7 201" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Day"
        android:id="@+id/textView3"
        android:paddingTop="8dp"
        android:layout_below="@+id/placeEditText"
        android:layout_alignParentLeft="true" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/daySpinner"
        android:layout_below="@+id/placeEditText"
        android:layout_toRightOf="@+id/textView" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time"
        android:id="@+id/textView4"
        android:layout_below="@+id/daySpinner"
        android:layout_alignParentLeft="true" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeSpinner"
        android:layout_below="@+id/daySpinner"
        android:layout_toRightOf="@+id/textView" />



    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/addSectionButton"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/timeSpinner"
        android:layout_centerHorizontal="true" />


</RelativeLayout><!-- From: file:/Users/mahmoud/Documents/workspace_android/SchoolAssistant/SchoolAssistant/src/main/res/layout/add_class_dialog.xml -->